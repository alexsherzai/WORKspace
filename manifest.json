{
  "manifest_version": 2,
  "name": "WORKspace",
  "version": "0.1",
  "description": "Creating a in-browser workspace to better organize your searches.",
 
  "background": {
    "scripts": ["background.js"]
  },
  
  "permissions": [
    "activeTab",
    "webNavigation",
    "storage",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "Beastify",
    "default_popup": "popup/choose_beast.html"
  },

  "web_accessible_resources": [
    "beasts/frog.jpg",
    "beasts/turtle.jpg",
    "beasts/snake.jpg"
  ],

  "sidebar_action": {
    "default_icon": "icons/star.png",
    "default_title" : "Annotator",
    "default_panel": "sidebar/panel.html"
  },

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }
}

